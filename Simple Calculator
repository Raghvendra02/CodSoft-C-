#include<iostream>
using namespace std;
int main(){
    int x, y, output;
    char input;
    cout<<"Welcome To The Calculator\n\n";
    cout<<"Please Enter Value 1 and Value 2: \n";
    cin>>x>>y;
    cout<<"Please Enter The Operation To Be Performed (-, +, /, x):";
    cin>>input;
    switch(input){
        case '+': output= x + y;
        break;
        case '-': output= x - y;
        break;
        case '/': output= x / y;
        break;
        case 'x': output= x * y;
        break;
        default: cout<<" Please Select An Valid Operation";


    }
    cout<<"Calculated Output Is :"<<output;
    return 0;
}
